generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model UserPreferences {
  id        String   @id @default(cuid())
  userId    String   @unique
  name      String?
  language  String?
  tone      String?
  interests String?
  apiKey    String?
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
} 